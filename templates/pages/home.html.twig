{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid text-center pt-3" style="background: #F5F5F5;">
        <h1>{{ about.fullname }}</h1>
        <p>{{ about.description }}</p>
        <p>{{ about.email }}</p>
        <p>{{ about.city }}</p>
        <hr>
    </div>
    <div class="section-skills mb-5" id="skills">
        <h1 class="text-center" style="text-decoration: underline">Compétences</h1>
        <div class=" mx-auto my-auto">
            <div class="row mx-auto">
                {% for skill in skills %}
                    <div class="col-6 d-flex justify-content-center">
                        <div class="progress mt-5 w-75" style="height: 50px">
                            <div class="progress-bar" role="progressbar" style="width: {{ skill.score }}%" aria-valuenow="{{ skill.score }}" aria-valuemin="0" aria-valuemax="100">
                                {{ skill.name }} {{ skill.score }}%</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="section-experiences" id="exp">
        <hr>
        <h1 class="text-center" style="text-decoration: underline">Expériences</h1>
        <div class="row">
            {% for experience in experiences %}
                    <div class="col-6 d-flex flex-column align-items-center mt-5 mb-5 mx-auto" style="background: #F5F5F5; height: 200px; width: 400px; border-radius: 4px;box-shadow: -10px -10px 20px #FFFFFF, 10px 10px 20px rgba(128, 128, 128, 0.5);">
                        <p class="my-auto text-center">Formation : {{ experience.formation }}</p>
                    </div>
            {% endfor %}
        </div>

    </div>
    <form method="POST">
        <div class="section-form" id="contact" style="background: #F5F5F5;">
            <hr>
            <h1 class="text-center" style="text-decoration: underline">Me contacter</h1>
            <div class="mb-3 mx-auto mt-5" style="width: 500px">
                <label for="exampleFormControlInput1" class="form-label">Votre email</label>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="mb-3 mx-auto" style="width: 500px">
                <label for="exampleFormControlTextarea1" class="form-label">Votre message</label>
                <textarea name="message" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class=" mx-auto d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mb-5">Envoyer</button>
            </div>
        </div>
    </form>

{% endblock %}